{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tồn kho và Nhà cung cấp",
  "type": "object",
  "properties": {
    "ma_nha_cung_cap": {
      "type": "string",
      "pattern": "^NCC[0-9]{3}$"
    },
    "ten_nha_cung_cap": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "nguoi_lien_he": {
      "type": "string",
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 6,
      "maxLength": 100
    },
    "dien_thoai": {
      "type": "string",
      "pattern": "^0[0-9]{9,10}$"
    },
    "dia_chi": {
      "type": "string",
      "maxLength": 200
    },
    "ton_kho": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "type": "object",
        "properties": {
          "ma_ton_kho": {
            "type": "string",
            "pattern": "^TK[0-9]{3}$"
          },
          "so_luong_ton": {
            "type": "integer",
            "minimum": 0
          },
          "ngay_cap_nhat": {
            "type": "string",
            "format": "date"
          },
          "ma_san_pham": {
            "type": "string",
            "pattern": "^SP[0-9]{3}$"
          },
          "ten_san_pham": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100
          }
        },
        "required": ["ma_ton_kho", "so_luong_ton", "ngay_cap_nhat", "ma_san_pham"],
        "additionalProperties": false
      }
    }
  },
  "required": ["ma_nha_cung_cap", "ten_nha_cung_cap", "email", "dien_thoai", "ton_kho"],
  "additionalProperties": false
}
